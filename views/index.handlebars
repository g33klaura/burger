<div class="container">

  <div class="row">
    <div class="col s12 center-align">
      <h1>Eat-Da-Burger</h1>
      <h3>Hope you're hungry!</h3>
    </div>
  </div>

  <div class="row">
    <div class="col s4 center-align">
      <h5>Ready to Eat</h5>
      <ul>
        {{#each burgers}}
          {{!-- {{#unless devoured}} --}}
            {{!-- {{> cats/cat-block sleep=true}} --}}
          {{!-- {{/unless}} --}}
        {{/each}}
      </ul>
    </div>

    <div class="col s4 center-align">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea id="textarea1" class="materialize-textarea"></textarea>
              <label for="textarea1">Describe a dream burger</label>
            </div>            
          </div>
          <div class="row">
            <div class="col s12">
              <button class="btn waves-effect waves-light teal darken-1" type="submit" name="action">Add burger
              <i class="material-icons right">restaurant</i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div> 
    {{!-- ^^Closes middle col s4 --}}

    <div class="col s4 center-align">
      <h5>Eaten</h5>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{!-- {{> cats/cat-block sleep=false}} --}}
          {{/if}}
        {{/each}}
      </ul>
    </div> 
  </div>

</div>
